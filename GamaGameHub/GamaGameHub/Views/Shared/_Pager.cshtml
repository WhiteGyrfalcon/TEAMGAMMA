@model GamaGameHub.Core.Models.Pagination.Pager

<div class="container">
    @if (Model.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">

            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="@Model.Controller" asp-action="Index" asp-route-page="1">First</a>
                </li>
                <li>
                    <a class="page-link" asp-controller="@Model.Controller" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)"> Previous </a>
                </li>
            }

            @for (int pg = Model.StartPage; pg <= Model.EndPage; pg++)
            {
                <li class="page-item @(pg == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-controller="@Model.Controller" asp-action="Index" asp-route-page="@pg"> @pg </a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="@Model.Controller" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)"> Next </a>
                </li>
                <li>
                    <a class="page-link" asp-controller="@Model.Controller" asp-action="Index" asp-route-page="@(Model.TotalPages)"> Last </a>
                </li>
            }
        </ul>
    }
</div>