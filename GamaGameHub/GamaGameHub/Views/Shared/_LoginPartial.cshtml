@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="s-header__nav row">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="test1 test nav-item @(@ViewData["Title"]?.ToString() == "Profile" ? "current" : "")">
            <div class="test3">
                <a class="lh-1 test-text nav-link text-dark" asp-area="Identity" asp-controller="Account" asp-action="Profile" title="Profile">Hello, @User.Identity?.Name!</a>
            </div>
            </li>
        <li class="test2 test nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="login-register-nav-item @(@ViewData["Title"]?.ToString() == "Register" ? "current" : "")">
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li class="login-register-nav-item @(@ViewData["Title"]?.ToString() == "Login" ? "current" : "")">
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    }
</ul>
